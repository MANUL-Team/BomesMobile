<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".BoMesApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bomes"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentation.view.activities.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.FindFriendsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.CreatingChatActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.FriendsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.CustomizeStickerHints"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.SelectStickerForHints"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.UpgradeBomesActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.PhotoPlayer"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.activities.CodeConfirmActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.UserPageActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.VideoPlayer"
            android:configChanges="orientation|screenSize"
            android:exported="false" />

        <service
            android:name=".domain.ImportantClasses.ImportantClasses.NotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".presentation.view.activities.ChatActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.ChatsActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.UserInfoActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>